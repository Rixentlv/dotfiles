#!/usr/bin/env bash

set -e

NEW_WINDOW_NAME="$(basename $1)"

if tmux list-windows -F"#W" | grep $1 -q
then
  index=$(tmux list-windows -F"#I")
  tmux select-window -t $index
else
  tmux new-window -c "$1" -n $NEW_WINDOW_NAME
  tmux send-keys "$EDITOR" C-m
  tmux split-window -h -c "$1"
  tmux select-pane -t0
  tmux resize-pane -Z
fi


